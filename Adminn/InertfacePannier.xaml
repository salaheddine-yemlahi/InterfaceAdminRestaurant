<Page x:Class="Adminn.InertfacePannier"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Adminn"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InertfacePannier">

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="Black"/>
            <Border Grid.Column="1" Background="White"/>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Content="Burgers" Background="White"  Margin="70,18,70,18" Click="ToBurgers"/>
                <Button Grid.Row="1" Content="Boissons" Background="White"  Margin="70,18,70,18" Click="ToDrinks"/>
                <Button Grid.Row="2" Content="Frites" Background="White"  Margin="70,18,70,18" Click="ToFrites"/>
                <Button Grid.Row="3" Content="Menus" Background="White"  Margin="70,18,70,18" Click="ToMenu"/>
                <Button Grid.Row="4" Content="Panier" Background="BlanchedAlmond"  Margin="70,18,70,18"/>
                <Button Grid.Row="5" Content="Commandes" Background="White"  Margin="70,18,70,18" Click="ToOrders"/>
                <Button Grid.Row="6" Content="Profil" Background="White"  Margin="70,18,70,18"/>
                <Button Grid.Row="7" Content="Déconnecter" Background="White"  Margin="70,18,70,18" Click="LogOut"/>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <Button Content="ajouter un article" Margin="0,0,20,0" Background="BlanchedAlmond" VerticalAlignment="Center"  Width="142" Height="23" Click="AddItem"/>
                    <Button Content="ajouter un menu" Margin="0,0,20,0" Background="BlanchedAlmond" VerticalAlignment="Center"  Width="142" Height="23" Click="AddMenu"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Grid.Row="2">
                    <Button Content="Passer la commande" Margin="0,0,20,0" Background="BlanchedAlmond" VerticalAlignment="Center"  Width="142" Height="23" Click="PassOrder"/>
                    <Button Content="Vider le pannier" Margin="0,0,20,0" Background="BlanchedAlmond" VerticalAlignment="Center"  Width="142" Height="23" Click="ClearPannier"/>
                </StackPanel>

                <!-- Affichage des commandes -->
                <Grid Grid.Row="1">
                    <ListBox x:Name="PannierListBox" BorderThickness="0" Padding="10" Height="Auto" Width="Auto" MaxHeight="700">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="5" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10" CornerRadius="5">
                                    <StackPanel>
                                        <!-- ID de la commande -->
                                        <TextBlock Text="{Binding IdOrder}" FontWeight="Bold" FontSize="14" TextAlignment="Center"/>
                                        <TextBlock Text="{Binding EtatOrder}" FontSize="12" TextAlignment="Center"/>

                                        <!-- Articles de la commande (Nouritures, Boissons, Frites) -->
                                        <ItemsControl ItemsSource="{Binding Nouritures}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="5" Padding="5">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Nom}" FontWeight="Bold" FontSize="12" TextAlignment="Center"/>
                                                            <TextBlock Text="{Binding Prix, StringFormat='Prix: {0:C}'}" Foreground="Green" FontSize="11" TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding Boissons}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="5" Padding="5">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Nom}" FontWeight="Bold" FontSize="12" TextAlignment="Center"/>
                                                            <TextBlock Text="{Binding Prix, StringFormat='Prix: {0:C}'}" Foreground="Green" FontSize="11" TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <ItemsControl ItemsSource="{Binding Frites}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="LightGray" BorderThickness="0.5" Margin="5" Padding="5">
                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Nom}" FontWeight="Bold" FontSize="12" TextAlignment="Center"/>
                                                            <TextBlock Text="{Binding Prix, StringFormat='Prix: {0:C}'}" Foreground="Green" FontSize="11" TextAlignment="Center"/>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <!-- Informations client -->
                                        <TextBlock Text="{Binding client.Nom}" FontStyle="Italic" FontSize="11" HorizontalAlignment="Right"/>
                                        <TextBlock Text="{Binding client.Email}" FontSize="10" HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
